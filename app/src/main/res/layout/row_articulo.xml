<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3">

    <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite">

        <TextView
                android:id="@+id/lblTienda"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                style="@style/table_row_item"
                android:text="100"
                android:layout_column="1"/>

        <TextView
                android:id="@+id/lblSerieNumero"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="001  83948"
                style="@style/table_row_item"
                android:layout_column="2"/>

        <TextView
                android:id="@+id/lblCliente"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="ODAIR HUAMANI CONDE"
                style="@style/table_row_item"
                android:maxLength="27"
                android:layout_column="3"/>

        <!--<TextView
                android:id="@+id/lblNroDocIdentidad"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="10708374852"
                style="@style/table_row_item"
                android:layout_column="4"/>-->

        <TextView
                android:id="@+id/lblFectra"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="01/09/2022"
                style="@style/table_row_item"
                android:layout_column="5"/>

        <TextView
                android:id="@+id/lblTotal"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1000.98"
                style="@style/table_row_item"
                android:layout_column="6"/>

        <Button
                android:id="@+id/btnFacturar"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Facturar"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/button_background1"
                android:drawableStart="@drawable/ic_facturar"
                android:layout_column="7"
                android:textColor="@color/colorWhite"/>
    </TableRow>
</TableLayout>