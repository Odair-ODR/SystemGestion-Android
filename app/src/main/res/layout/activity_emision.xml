<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Emision">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Nueva_v"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="@dimen/text_margin"
                android:background="@drawable/sale"
                />


            <Button
                android:id="@+id/Consultar_v"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_margin"
                android:textAllCaps="true"
                android:textStyle="normal|bold"
                android:background="@drawable/consult" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:gravity="center">

            <Button
                android:id="@+id/Anular_V"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:background="@drawable/anular"
                android:textAllCaps="true"
                android:textSize="@dimen/text_margin"
                android:textStyle="normal|bold" />


            <Button
                android:id="@+id/Modificar_v"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/editar"
                android:textAllCaps="true"
                android:textSize="@dimen/text_margin"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>