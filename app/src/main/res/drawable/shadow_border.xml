<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="1dp" android:top="5dp" android:left="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/colorGray" />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="2.5dp" android:right="3dp">
                <shape>
                    <gradient android:angle="270" android:endColor="@color/colorWhite"
                            android:startColor="@color/colorWhite" />
                    <stroke android:width="1dp" android:color="@color/colorWhite" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>