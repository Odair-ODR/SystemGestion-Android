<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorSkyBlue"/>
                <corners android:radius="2dp"/>
                <padding android:bottom="4dp" android:left="4dp"
                    android:right="4dp" android:top="4dp" />
            </shape>
        </item>
        <item>
            <bitmap android:gravity="center|end" android:src="@drawable/down" />
        </item>
    </layer-list>
</item>
</selector>